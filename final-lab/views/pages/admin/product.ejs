<div class="dropdown me-3">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        Sort by
    </button>
    <ul class="dropdown-menu" aria-labelledby="sortDropdown">
 
        <li><a class="dropdown-item" href="/admin/products/<%= page %>/All" data-sort="All">Default</a></li>
        <li><a class="dropdown-item" href="/admin/products/<%= page %>/price" data-sort="price">Price</a></li>
    </ul>
          </div>
<div class="container mt-5">
    <h1 class="mb-4 text-center">Products</h1>

    <!-- Table for Products -->
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product._id %></td>
                    <td><%= product.name %></td>
                    <td>$<%= product.price %></td>
                    <td><img src="/<%= product.picture %>" class="img-thumbnail" alt="Product Image" style="max-width: 100px;"></td>
                    <td>
                        <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-primary mb-1">Edit</a>
                        <a href="/admin/products/delete/<%= product._id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <% for (let index = 1; index <= totalPages; index++) { %>
        <li class="page-item">
          <a class="page-link" href="/admin/products/<%= index %>"><%= index %></a>
        </li>
      <% } %>
    </ul>
  </nav>
  
  
</nav>