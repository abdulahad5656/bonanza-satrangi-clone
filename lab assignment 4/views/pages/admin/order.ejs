<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Order Details</h1>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Order Number</th>
                    <th>Order Date</th>
                    <th>Total Amount</th>
                    <th>Shipping Details</th>
                    <th>Status</th>
                    <th>Payment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach((order, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= order.orderNumber %></td>
                    <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                    <td>$<%= order.totalAmount.toFixed(2) %></td>
                    <td>
                        <strong>Name:</strong> <%= order.shippingDetails.fullName %><br>
                        <strong>Address:</strong> <%= order.shippingDetails.address %>, <%= order.shippingDetails.city %><br>
                        <strong>Phone:</strong> <%= order.shippingDetails.phone %>
                    </td>
                    <td class="text-capitalize"><%= order.status %></td>
                    <td>
                        <strong>Method:</strong> <%= order.paymentMethod %><br>
                        <strong>Status:</strong> <%= order.paymentStatus %>
                    </td>
                    <td>
                        <a href="/admin/orders/<%= order._id %>/view" class="btn btn-primary btn-sm">View</a>
                     
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
